{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Add EPEL9 Repo",
            "type": "debugpy",
            "request": "launch",
            "module": "windnf.cli",
            "args": [
                "repoadd",
                "epel9",
                "https://dl.fedoraproject.org/pub/epel/9/Everything/x86_64/"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Sync EPEL9 Repo",
            "type": "debugpy",
            "request": "launch",
            "module": "windnf.cli",
            "args": [
                "reposync",
                "epel9"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "List Repos",
            "type": "debugpy",
            "request": "launch",
            "module": "windnf.cli",
            "args": [
                "repolist"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Delete EPEL9 Repo",
            "type": "debugpy",
            "request": "launch",
            "module": "windnf.cli",
            "args": [
                "repodel",
                "epel9"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Search package 'bash' in EPEL9",
            "type": "debugpy",
            "request": "launch",
            "module": "windnf.cli",
            "args": [
                "search",
                "bash",
                "--repo",
                "epel9"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Search multiple patterns with duplicates",
            "type": "debugpy",
            "request": "launch",
            "module": "windnf.cli",
            "args": [
                "search",
                "bash",
                "coreutils",
                "--showduplicates"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Resolve bash dependencies recursively with weak deps",
            "type": "debugpy",
            "request": "launch",
            "module": "windnf.cli",
            "args": [
                "resolve",
                "bash",
                "--repo",
                "epel9",
                "--recurse",
                "--weakdeps"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Resolve multiple packages non-recursively",
            "type": "debugpy",
            "request": "launch",
            "module": "windnf.cli",
            "args": [
                "resolve",
                "bash",
                "coreutils"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Download bash package with all deps",
            "type": "debugpy",
            "request": "launch",
            "module": "windnf.cli",
            "args": [
                "download",
                "bash",
                "--repo",
                "epel9",
                "--alldeps"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Download multiple packages recursively fetching duplicates",
            "type": "debugpy",
            "request": "launch",
            "module": "windnf.cli",
            "args": [
                "download",
                "bash",
                "coreutils",
                "--recurse",
                "--fetchduplicates"
            ],
            "console": "integratedTerminal"
        }
    ]
}